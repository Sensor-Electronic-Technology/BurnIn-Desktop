@rendermode InteractiveServer
<textarea class="form-control" 
    id="burn-in-console" 
    rows="10" onClick='scroll_end()'
    readonly style="cursor: pointer">@this.Text</textarea>
<script>
    function scroll_end() {
      var textarea = document.getElementById("burn-in-console");
           
      if(textarea.selectionStart == textarea.selectionEnd) {
         textarea.scrollTop = textarea.scrollHeight;
      }
    }
</script>
@code {
    [Parameter]
    public string? Text { get; set; }
    
}