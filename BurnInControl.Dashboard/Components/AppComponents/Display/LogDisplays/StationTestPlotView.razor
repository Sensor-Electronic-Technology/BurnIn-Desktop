@using BurnInControl.Data.BurnInTests

<RadzenStack Orientation="Orientation.Vertical" Gap="10">
    <LogPlot PropertySub="V"
             Title="Voltage"
             YStep="10"
             CategoryAxisLabel="Time(Hrs)"
             ValueAxisLabel="Voltage(V)"
             StationTestLogs="@StationTestLogs"/>
    <LogPlot PropertySub="I"
             Title="Current"
             YStep="10"
             CategoryAxisLabel="Time(Hrs)"
             ValueAxisLabel="Current(mA)"
             StationTestLogs="@StationTestLogs"/>
    <LogPlot PropertySub="T"
             Title="Temperature"
             YStep="10"
             CategoryAxisLabel="Time(Hrs)"
             ValueAxisLabel="Temperature(C)"
             StationTestLogs="@StationTestLogs"/>
</RadzenStack>

@code {
    [Parameter] public IEnumerable<StationTestReading>? StationTestLogs { get; set; }
    [Parameter] public string StationName { get; set; }
    [Parameter] public string Pocket1Wafer { get; set; }
    [Parameter] public string Pocket2Wafer { get; set; }
    [Parameter] public string Pocket3Wafer { get; set; }
}