@rendermode InteractiveServer
<RadzenStack Orientation="Orientation.Vertical">
    <RadzenFieldset Text="Cycle Current" Style="width:fit-content; height:fit-content;">
        <RadzenButton Text="@(this.CurrentSetPoint+"mA")" 
                      Click="@CurrentCycle"
                      Style="width:150px; height:75px; font-size: x-large"
                      ButtonStyle="ButtonStyle.Light"
                      Disabled="@this.Disabled"/>
    </RadzenFieldset>
    <RadzenFieldset Text="Toggle Temperature" Style="width:fit-content; height:fit-content;">
        <RadzenToggleButton Text="@(this.TemperatureSetPoint+"°C")" 
                            Style="width:150px; height:75px; font-size: x-large"
                            ButtonStyle="ButtonStyle.Danger"
                            ToggleButtonStyle="ButtonStyle.Secondary"
                            Click="@this.TemperatureToggle"
                            Disabled="@this.Disabled"/>
    </RadzenFieldset>
</RadzenStack>
@code {
    [Parameter] public int CurrentSetPoint { get; set; } = 0;
    [Parameter] public EventCallback       CurrentCycle { get; set; }
    [Parameter] public int TemperatureSetPoint { get; set; } =0;
    [Parameter] public EventCallback TemperatureToggle { get; set; }
    [Parameter] public bool Disabled { get; set; } = false;
}