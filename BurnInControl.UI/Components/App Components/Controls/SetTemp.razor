<RadzenFieldset Text="Set Temperature" Style="width: fit-content">
    <RadzenNumeric TValue="double" Value="@this.Temp" Min="25" Max="100" Placeholder="85" ValueChanged="TempChangedHandler" class="col-1" Style="width: 100px"/>
</RadzenFieldset>
@code {
    [Parameter]
    public double Temp { get; set; }
    
    [Parameter]
    public EventCallback<double> TempChanged { get; set; }
    
    private async Task TempChangedHandler(Double obj) {
        await this.TempChanged.InvokeAsync(obj);
    }
}