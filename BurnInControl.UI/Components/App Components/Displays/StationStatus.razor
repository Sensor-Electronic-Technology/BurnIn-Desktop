
<RadzenStack Orientation="Orientation.Horizontal" AlignItems="Radzen.AlignItems.Center" Style="width: fit-content; height: fit-content; padding-right: 1rem" Gap="20">
    <RadzenText Text=@this._stationText TextStyle="TextStyle.DisplayH6" />
    <LedIndicator LedShape="led-rectangle" LedOnColor="led-green" State="false" LedWidth="150px" LedHeight="30px" OnText="Running" OffText="Idle"/>
</RadzenStack>

@code {
    [Parameter]
    public string StationId {get;set;}="S01";

    private string _stationText="";

    protected override Task OnParametersSetAsync(){
        this._stationText="StationId: "+this.StationId;
        return base.OnParametersSetAsync();
    }
}
