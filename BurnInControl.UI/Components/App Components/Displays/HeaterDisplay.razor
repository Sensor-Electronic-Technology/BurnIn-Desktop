<RadzenColumn>
    <RadzenStack Orientation="Orientation.Vertical" Gap="0">
        <GenericDisplay DisplayLabel="@this.DisplayLabel" DisplayValue="@this.DisplayValue"/>
        <LedIndicator State="@this.State" />
    </RadzenStack>
</RadzenColumn>

@code {
    [Parameter] public string DisplayLabel { get; set; } = "T1";
    [Parameter] public string DisplayValue { get; set; } = "85";
    [Parameter] public bool State { get; set; } = true;
}
