<RadzenFieldset Text="Station Service" Style="width: fit-content;">
    <RadzenStack>
        <RadzenButton Text="@(this.ServiceConnected ? "Disconnect Service" : "Connect Service")" 
                      ButtonStyle="@(this.ServiceConnected ? ButtonStyle.Light : ButtonStyle.Info)" 
                      Size="ButtonSize.Medium" 
                      Click="@this.Connect" 
                      Style="width: 170px; height: 52px"/>
        <RadzenButton Text="@(this.UsbConnected ? "Disconnect Usb" : "Connect Usb")"
                      ButtonStyle="@(this.UsbConnected ? ButtonStyle.Light: ButtonStyle.Primary)"
                      Size="ButtonSize.Medium"
                      Visible="@this.UsbVisible"
                      Click="@this.UsbConnect" Style="width: 170px; height: 52px"/>
        <RadzenToggleButton Text="Restart Service"
                            ButtonStyle="ButtonStyle.Warning"
                            Size="ButtonSize.Medium"
                            ToggleButtonStyle="ButtonStyle.Warning"
                            ToggleShade="Shade.Dark"
                            Visible="@this.RestartServiceBtnVisible"
                            Click="@this.RestartService" 
                            Style="width: 170px; height: 52px"/>
        
    </RadzenStack>
</RadzenFieldset>
@code {
    [Parameter] public bool ServiceConnected { get; set; }
    [Parameter] public bool UsbConnected { get; set; }
    [Parameter] public EventCallback Connect { get; set; }
    [Parameter] public EventCallback UsbConnect { get; set; }
    [Parameter] public bool UsbVisible { get; set; } = true;
    [Parameter] public EventCallback RestartService { get; set; }
    [Parameter] public bool RestartServiceBtnVisible { get; set; } = false;

}