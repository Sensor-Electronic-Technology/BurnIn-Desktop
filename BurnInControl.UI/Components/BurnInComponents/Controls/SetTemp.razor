<RadzenFormField Text="Set Temperature" Style="width: fit-content">
    <RadzenNumeric TValue="int" Value="@this.Temp" Min="25" Max="100" Placeholder="85" ValueChanged="TempChangedHandler"/>
</RadzenFormField>
@code {
    [Parameter]
    public int Temp { get; set; }
    
    [Parameter]
    public EventCallback<int> TempChanged { get; set; }
    
    private async Task TempChangedHandler(int obj) {
        await this.TempChanged.InvokeAsync(obj);
    }
}