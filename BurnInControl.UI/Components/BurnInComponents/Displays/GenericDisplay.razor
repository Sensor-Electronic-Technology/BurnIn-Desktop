@using Radzen


<RadzenFormField Text="@this.DisplayLabel" Variant="Radzen.Variant.Outlined" Style=@this._css>
    <RadzenText Text="@this.DisplayValue" TextStyle="@this.DisplayTextStyle"
        Style="font-family: 'Orbitron', sans-serif; vertical-align: text-bottom; margin: .5rem" TextAlign="Radzen.TextAlign.Center"/>
</RadzenFormField>

@code {
    [Parameter]
    public string DisplayLabel { get; set; } = "T1";

    [Parameter]
    public string DisplayValue  {get;set;} = "85.5";

    [Parameter]
    public TextStyle DisplayTextStyle { get; set; } = TextStyle.DisplayH3;
    
    [Parameter]
    public string LabelFontSize { get; set; } = "24px";

    [Parameter]
    public string Width { get; set; } = string.Empty;

    private string _css="--my-font-size: 24px; width: 130px";

    protected override void OnParametersSet() {
        this._css = "--my-font-size: " + this.LabelFontSize;
        if (!string.IsNullOrEmpty(this.Width)) {
            this._css+= "; width: " + this.Width;
        }
        
        base.OnParametersSet();
    }
}