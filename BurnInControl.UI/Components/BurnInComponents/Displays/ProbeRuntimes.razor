@using BurnInControl.Shared
@using BurnInControl.UI.Data

<RadzenStack AlignItems="AlignItems.Center" Style="padding: .5rem">
    <RadzenText Text="Probe Runtimes" TextStyle="TextStyle.H5" TextAlign="TextAlign.Center"/>

    <RadzenStack Gap="5" Reverse="false" Style="border: 1px solid #f6f7fa; padding: .5rem">
        @for (int i = 0; i < ControllerHardwareConstants.PROBE_COUNT; i++) {
            var text = $"P{i + 1}";
            <RuntimeDisplay DisplayText="@text" RuntimeSecs="@this.ProbeStates[i].RunTime" State="ProbeStates[i].RunTimeOkay" />
        }
    </RadzenStack>
</RadzenStack>
@code{
    [Parameter]
    public List<ProbeState> ProbeStates { get; set; }=[];
}