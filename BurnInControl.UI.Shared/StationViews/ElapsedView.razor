@using BurnInControl.Shared.UiShared
<RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" Gap="2" Style="margin: 10px; border: black">
    <h3>Elapsed</h3>
    <RuntimeDisplay DisplayText="Runtime"
                    TextStyle="TextStyle.H4"
                    State="@this.Running"
                    RuntimeSecs="@this.Elapsed"
                    LabelFontSize="12" />
    <ProbeRuntimes ProbeStates="@this.ProbeStates"/>
</RadzenStack>
@code {
    [Parameter] public List<ProbeState> ProbeStates { get; set; } = [];
    [Parameter] public ulong Elapsed { get; set; } = 0;
    [Parameter] public bool Running { get; set; } = false;
    [Parameter] public bool Pasued { get; set; } = false;

}